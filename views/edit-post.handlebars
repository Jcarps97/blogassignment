<form class="col-10 p-4 m-auto">
        <input type="hidden" id="edit-post-id" value="{{post.id}}"/>
        <h4 class="form group col-5 m-auto">EDIT POST</h4>
        <div class="form-group">
            <label for="postName">Title:</label>
            <textarea class="form-control" id="edited-name" rows="1">{{post.title}}</textarea>
        </div>
        <div class="form-group">
            <label for="petType">Content:</label>
            <textarea class="form-control" id="edited-type" rows="1">{{post.body}}</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button id="edit-post-button" class="btn btn-dark col-4">Update Post</button>
        </div>
</form> 


<div class="d-flex justify-content-center">
</div>



<script src="/js/update-post.js"></script>