<input type="hidden" id="edit-comment-id" value="{{comment.id}}"/>

<div class="row">
    <div class="p-4 col-sm-12 col-lg-3">
        <a href="/api/comment/edit/{{comment.id}}"><button class="waves-effect waves-light btn-large">Edit Comment</button></a>
    </div>
    <div class="p-4 col-sm-12 col-lg-3">
        <button id="delete-comment-button" class="waves-effect waves-light btn-large">Delete Comment</button>
    </div>
</div>

<div class="card" style="width: 25rem;">
    <div class="card-body" >
        <p id='comment-body'>
            {{comment.body}}
        </p>
        <p id='comment-user'>
            By: {{comment.user_id}}
        </p>
    </div>
</div>


<script src="/js/delete-comment.js"></script>
